                    android:id="@+id/even_3_desc"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="3/30/16"
                    android:id="@+id/textViewc"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="9:00 PM"
                    android:id="@+id/textView3b"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFF"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="VIEW"
                    android:id="@+id/get_event_3"
                    android:background="@drawable/small_button_styles"
                    android:textColor="#FFFF"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:onClick="goToClub" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <!-- HTTP Image -->
            <ImageView
                android:id="@+id/imageViewD"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/hello"
                android:maxHeight="70dp"
                android:maxWidth="70dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="IEEE"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hardware Sucks"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFF" />

            <TextView
                android:layout_width="wrap_content"
